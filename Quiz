    <div class="domanda">
        <label class="quesito">Qual è la capitale della Francia?</label>
        <br>
        <input type="text" id="r1">
    </div>
    <br>
    <div class="domanda">
        <label class="quesito">Quanto fa 7 * 7?</label>
        <br>
        <input type="text" id="r2">
    </div>
    <br>
    <div class="domanda">
        <label class="quesito">In che anno finì la Seconda Guerra Mondiale?</label>
        <br>
        <input type="text" id="r3">
    </div>
    <br>
    <div class="domanda">
        <label class="quesito">In che continente si trova il Ghana?</label>
        <br>
        <input type="text" id="r4">
    </div>
    <br>
    <div class="domanda">
        <label class="quesito">In che anno è stato introdotto l'euro in Italia?</label>
        <br>
        <input type="text" id="r5">
    </div>
    <br>
    <div>
        <button class="btn" onclick="correzione()">Invia</button>
    </div>
    <br>
    <div>
        <button class="btn" onclick="ripeti()">Riprova</button>
    </div>
    <div id="risultato" style="font-weight: bold; margin-top: 15px; font-family: sans-serif; font-size: 20px;"></div>

    <script>
        function correzione () {
            let punteggio = 0;
            const risposta1 = document.getElementById("r1").value.trim().toLowerCase();
            if (risposta1 === "parigi") {
                punteggio++;
            }
        const risposta2 = document.getElementById("r2").value.trim();
        if (risposta2 === "49") {
            punteggio++;
        }
        const risposta3 = document.getElementById ("r3").value.trim().toLowerCase();
        if (risposta3 === "1945") {
            punteggio++;
        }        
        const risposta4 = document.getElementById("r4").value.trim().toLowerCase();
        if (risposta4 === "africa") {
            punteggio++;
        }
        const risposta5 = document.getElementById("r5").value.trim().toLowerCase();
        if (risposta5 === "2002") {
            punteggio++;
        }
        
         const totale = 5;
         document.getElementById("risultato").innerText = `Hai totalizzato ${punteggio} punti su ${totale}`;
        }

        function ripeti() {
            for (let i = 1; i <= 5; i++) {
            document.getElementById(`r${i}`).value = "";
            }
        }
    </script>
