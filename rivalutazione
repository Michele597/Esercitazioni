<body>
  <h2>Calcolo della Rivalutazione del TFR</h2>

  <label>TFR Lordo:</label>
  <input type="number" id="tfrLordo" placeholder="Inserisci il TFR annuo lordo">

  <button onclick="calcolaRivalutazione()">Calcola Rivalutazione</button>

  <div id="risultato"></div>

  <script>
    function calcolaRivalutazione() {
      let tfrLordo = Number(document.getElementById("tfrLordo").value);

      let inflazione = 0.057; // 5,7%
      let rivalutazioneFissa = tfrLordo * 0.015;
      let rivalutazioneVariabile = tfrLordo * 0.75 * inflazione;
      let rivalutazioneTotale = rivalutazioneFissa + rivalutazioneVariabile;
      let rivalutazioneNetta = rivalutazioneTotale * 0.83; // tassazione 17%
      let tfrFinale = tfrLordo + rivalutazioneNetta;

      document.getElementById("risultato").innerHTML = `
        <p>Rivalutazione fissa: €${rivalutazioneFissa.toFixed(2)}</p>
        <p>Rivalutazione variabile: €${rivalutazioneVariabile.toFixed(2)}</p>
        <p>Rivalutazione totale: €${rivalutazioneTotale.toFixed(2)}</p>
        <p>Rivalutazione netta: €${rivalutazioneNetta.toFixed(2)}</p>
        <p>TFR finale rivalutato: €${tfrFinale.toFixed(2)}</p>
      `;
    }
  </script>
</body>
</html>
