<head>
  <meta charset="UTF-8">
  <title>Calcolo TFR</title>
  <style>
    body {
      background-color: rgb(221, 216, 216);
      font-family: Verdana, Geneva, Tahoma, sans-serif;
      margin: 30px;
    }
    label {
      display: block;
      margin: 10px 0 5px;
      color: black;
      font-weight: bold;
    }
    input {
      margin: 5px;
      padding: 5px;
      width: 200px;
      border: 2px solid black;
    }
    button {
      margin-top: 30px;
      padding: 10px 10px;
      font-size: 16px;
      cursor: pointer;
      font-weight: bold;
      border: 2px solid black;
    }
    #risultato {
      margin-top: 20px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h2>Calcolo del TFR lordo</h2>
  
  <label>Stipendio annuo:</label>
  <input type="number" id="stipendio" placeholder="Inserisci lo stipendio annuo">

  <label>Straordinari</label>
  <input type="number" id="straordinari" placeholder="Inserisci gli straordinari">

  <label>Bonus</label>
  <input type="number" id="bonus" placeholder="Inserisci i bonus">

  <label>Tredicesima</label>
  <input type="number" id="tredicesima" placeholder="Inserisci la tredicesima">

  <br>
  <button onclick="calcolaTFR()">Calcola il tuo TFR</button>

  <div id="risultato"></div>

  <script>
    function calcolaTFR() {
      let stipendio = Number(document.getElementById("stipendio").value);
      let straordinari = Number(document.getElementById("straordinari").value);
      let bonus = Number(document.getElementById("bonus").value);
      let tredicesima = Number(document.getElementById("tredicesima").value);

      let totale = stipendio + straordinari + bonus + tredicesima;

      let tfr = totale / 13.5;

      document.getElementById("risultato").innerText =
        "Il TFR lordo è: " + tfr.toFixed(2) + " €";
    }
  </script>
</body>
